{
  "name": "@sitepins/mdx-parser",
  "version": "2.1.4",
  "description": "A parser for MDX that converts MDX to MDAST, compatible with Slate and Plate.",
  "author": "SitePins",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "browser": "./dist-browser/index.browser.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "browser": {
        "import": "./dist-browser/index.browser.mjs",
        "types": "./dist/index.d.ts"
      },
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "dist-browser",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/sitepins/mdx-parser.git"
  },
  "bugs": {
    "url": "https://github.com/sitepins/mdx-parser/issues"
  },
  "homepage": "https://github.com/sitepins/mdx-parser#readme",
  "scripts": {
    "build": "vite build && vite build --config vite.browser.config.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "dev": "vite build --watch",
    "clean": "rm -rf dist dist-browser"
  },
  "dependencies": {
    "acorn": "8.8.2",
    "ccount": "2.0.1",
    "estree-util-is-identifier-name": "2.1.0",
    "happy-dom": "^18.0.1",
    "lodash.flatten": "4.4.0",
    "mdast-util-compact": "4.1.1",
    "mdast-util-directive": "2.2.4",
    "mdast-util-from-markdown": "1.3.0",
    "mdast-util-gfm": "2.0.2",
    "mdast-util-mdx-jsx": "2.1.2",
    "mdast-util-to-markdown": "1.5.0",
    "micromark-extension-gfm": "2.0.3",
    "micromark-factory-mdx-expression": "1.0.7",
    "micromark-factory-space": "1.0.0",
    "micromark-factory-whitespace": "1.0.0",
    "micromark-util-character": "1.1.0",
    "micromark-util-symbol": "1.0.1",
    "micromark-util-types": "1.0.2",
    "parse-entities": "4.0.1",
    "prettier": "^2.8.8",
    "remark": "14.0.2",
    "remark-gfm": "^2.0.0",
    "remark-mdx": "2.3.0",
    "stringify-entities": "4.0.3",
    "unist-util-source": "4.0.2",
    "unist-util-stringify-position": "3.0.3",
    "unist-util-visit": "4.1.2",
    "uvu": "0.5.6",
    "vfile-message": "3.1.4"
  },
  "devDependencies": {
    "@types/estree": "1.0.0",
    "@types/jest": "^29.5.12",
    "@types/lodash.flatten": "^4.4.9",
    "@types/mdast": "^3.0.15",
    "@types/node": "^22.13.1",
    "@types/prettier": "^2.7.3",
    "@types/unist": "^2.0.11",
    "jest-file-snapshot": "^0.5.0",
    "tsup": "^8.4.0",
    "typescript": "^5.7.3",
    "vite": "^4.5.9",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^0.32.4"
  },
  "private": false,
  "peerDependencies": {
    "react": "^16.0.0 || ^17.0.0 || ^18.0.0"
  },
  "peerDependencyMeta": {
    "react": {
      "optional": true
    }
  },
  "keywords": [
    "sitepins",
    "remark",
    "remark-plugin",
    "plugin",
    "mdast",
    "markdown",
    "slate",
    "plate",
    "RTE",
    "text editor",
    "plate markdown"
  ],
  "packageManager": "yarn@1.22.19"
}
